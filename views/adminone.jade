  body
    nav.navbar.navbar-inverse.navbar-fixed-top
      .container-fluid
        .navbar-header
          a.navbar-brand#navbrand(href='/') WebSiteIcon
        ul.nav.navbar-nav
          li
            a(href='/') Home
          li
            a(href='/technology') Technology
          li
            a(href='/client') Client
          li
            a(href='/contact') Contact
          li.active
            a(href='/admin') Admin

    #jumbotron1.jumbotron
      .container-fluid
        h2 Welcome Admin.
        h3 See the messages.
        h4 Delete if you want to. 


  .row
    .col-md-2
    .col-md-8
      table.table
        tr
            th Name
            th Subjects
            th Message
            th Delete
        if items && items.length > 0
            each item in items
                tr
                    td #{item.email}
                    td #{item.subject}
                    td #{item.message}
                    td
                        a(href='/delete/#{item._id}') Delete
                        

                    
        else
            tr
                td(colspan=2) No records in database

    .col-md-2
